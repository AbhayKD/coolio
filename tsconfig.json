{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "incremental": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "stripInternal": false,
    "lib": [
      "es5",
      "es2018",
      "dom"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "./spec/*.ts",
    "./packages/**/*.ts",
    "./packages/**/*.json"
  ]
}
