{
  "name": "coolio",
  "version": "0.5.0",
  "description": "Extendable networking client",
  "homepage": "https://github.com/headline-1/coolio",
  "bugs": "https://github.com/headline-1/coolio/issues",
  "author": "Krzysztof Miemiec <krzysztof.miemiec@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "build": "lerna exec -- tsc",
    "build:watch": "lerna exec --parallel 'tsc -w --preserveWatchOutput'",
    "start": "yarn build && yarn build:watch",
    "clean": "rimraf packages/*/{dist,.jest,reports} && rimraf dist",
    "purge": "yarn clean && rimraf node_modules",
    "prepack": "yarn build && yarn verify",
    "release": "lerna publish --force-publish=*",
    "lint": "eslint ./packages/**/src --ext ts",
    "link:all": "lerna exec -- yarn link",
    "unlink:all": "lerna exec -- yarn unlink",
    "test": "jest --config='./jest.config.js' --json --outputFile='./reports/test.json' --testLocationInResults --runInBand --coverage",
    "test:watch": "jest --config='./jest.config.js' --watch",
    "verify": "yarn lint && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.20",
    "@types/lodash": "^4.14.144",
    "@types/node": "^12.11.7",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "codecov": "^3.6.1",
    "eslint": "^6.6.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.18.3",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.6.4",
    "whatwg-fetch": "^3.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
