{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2018", "dom"],
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "importHelpers": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "./spec/*.ts",
    "./packages/**/*.ts",
    "./packages/**/*.json"
  ]
}
